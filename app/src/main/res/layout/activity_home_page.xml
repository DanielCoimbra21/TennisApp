<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color_orange"
    tools:context=".HomePageActivity">

    <include layout="@layout/toolbar"></include>

    <TextView
        android:id="@+id/homepagetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Page"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"></TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bookacourtbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/homepagetitle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_transparent_button"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="@string/home_page_book_a_court_text"
        android:textColor="@color/black"
        android:textStyle="bold"></com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/courseoverviewbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookacourtbutton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_transparent_button"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="@string/home_page_court_overview_text"
        android:textColor="@color/black"
        android:textStyle="bold"></com.google.android.material.button.MaterialButton>


</RelativeLayout>